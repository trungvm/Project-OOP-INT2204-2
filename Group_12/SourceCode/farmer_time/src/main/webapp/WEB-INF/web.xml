<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  id="WebApp_ID" version="3.0">

  <display-name>Archetype Created Web Application</display-name>

  <welcome-file-list>
    <welcome-file>showProject</welcome-file>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>notFound.jsp</welcome-file>
  </welcome-file-list>

  <!-- Định nghĩa servlet có tên helloServlet, gắn với class HelloServlet -->
  <servlet>
    <servlet-name>HelloServlet</servlet-name>
    <servlet-class>test.HelloServlet</servlet-class>
  </servlet>

  <!-- Định nghĩa đường dẫn truy cập vào Servlet này -->
  <servlet-mapping>
    <servlet-name>HelloServlet</servlet-name>
    <url-pattern>/helloservlet</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>SessionFilter</filter-name>
    <filter-class>auth.SessionFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>SessionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>